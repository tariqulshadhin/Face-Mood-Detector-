<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rellllll"
    android:background="@drawable/homepage"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/top"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/theatre" />

   <TextView

       android:layout_centerHorizontal="true"
       android:textStyle="bold"
       android:textColor="#fff"
       android:textSize="25sp"
       android:id="@+id/sec"
       android:layout_below="@+id/top"
       android:text="Check Your Mood!!"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sec"
        android:layout_centerHorizontal="true"
        android:background="@drawable/facemood" />

    <Button

        android:textColorHint="#fff"
        android:textSize="20sp"
        android:layout_marginTop="75dp"
        android:id="@+id/get"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/mood"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:hint="Get Started">

    </Button>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/condition" />



</RelativeLayout>